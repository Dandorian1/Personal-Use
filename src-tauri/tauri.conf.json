{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MangaYouKnow",
  "version": "0.4.7",
  "identifier": "com.mangayouknow.dev",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "MangaYouKnow",
        "width": 800,
        "height": 600,
        "minHeight": 400,
        "minWidth": 640,
        "center": true,
        "visible": false,
        "backgroundColor": "#18181b"
      }
    ],
    "security": {
      "headers": {
        "Access-Control-Expose-Headers": "Tauri-Custom-Header",
        "Tauri-Custom-Header": {
          "referer": "'https://github.com'",
          "origin": "'https://github.com'"
        }
      },
      "csp": "http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*"
        ]
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "installMode": "both",
        "installerIcon": "./icons/icon.ico",
        "sidebarImage": "./icons/banner@164x314.png",
        "headerImage": "./icons/banner@150x57.png"
      },
      "wix": {
        "language": "en-US",
        "bannerPath": "./icons/banner@513x58.png"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "updater": {
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEwMkVBODg2RjBGNDEzQjEKUldTeEUvVHdocWd1b1BaV0FhWnN5WEJOVGVPVCtyRklQNmw2SVpYRFF2SDIzMTJjd0lBSnk3QlUK",
      "endpoints": [
        "https://github.com/manga-you-know/desktop/releases/latest/download/latest.json"
      ]
    },
    "cli": {
      "args": [
        {
          "name": "flag1",
          "short": "f",
          "takesValue": false
        },
        {
          "name": "autostart",
          "short": "a",
          "takesValue": false
        }
      ]
    }
  }
}
