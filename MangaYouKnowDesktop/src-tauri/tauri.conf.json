{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MangaYouKnow",
  "version": "0.1.0",
  "identifier": "com.mangayouknow.dev",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MangaYouKnow",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximizable": true,
        "minHeight": 400,
        "minWidth": 640,
        "center": true,
        "decorations": true
      } 
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
